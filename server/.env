# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nodeapi
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DB_NAME=nodeapi

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:4200

# JWT Authentication
JWT_SECRET=dev-jwt-secret-key-12345-change-in-production
JWT_EXPIRES_IN=24h

# Development Authentication Bypass (set to 'true' to disable auth in development)
DISABLE_AUTH=true

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=dev-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_VERSION=v1